generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clerkId   String   @unique
  email     String   @unique

  entries JournalEntry[] // one to many
}

model JournalEntry {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String   @db.Text // unlimited char

  userId String
  user   User   @relation(fields: [userId], references: [id]) // foreign key //User.entries

  analysis Analysis? // one to one //? has to be optional no initial analysis

  @@index([userId])
}

model Analysis {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mood      String
  summary   String   @db.Text
  color     String
  positive  Boolean

  entryId String
  entry   JournalEntry @relation(fields: [entryId], references: [id]) // foreign key

  @@unique([entryId])
}
